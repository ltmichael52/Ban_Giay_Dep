@model List<ShoesStore.Models.Banner>
<section class="banner-area">
	<div class="container">
		<div class="row fullscreen align-items-center justify-content-start">
			<div class="col-lg-12">
				<div class="active-banner-slider owl-carousel">
					<!-- single-slide -->
					@foreach (var banner in Model)
					{
						if (count == 0)
						{
							<div class="row single-slide align-items-center d-flex">
								<div class="col-lg-5 col-md-6">
									<div class="banner-content">
										<h1>@banner.Tenbanner</h1>
										<h3>@banner.Slogan</h3>
										<div class="add-bag d-flex align-items-center">
											<a class="primary-btn" href="@banner.Link">Shopping Now</a>
										</div>
									</div>
								</div>
								<div class="col-lg-7">
									<div class="banner-img">
										<a href="@banner.Link">
											<img class="img-fluid" style="max-width:657px;max-height:394px;"
											src="@Url.Content($"~/img/banner/{banner.Vitri}")" alt="Banner Image">
										</a>
									</div>
								</div>
							</div>
						}
						else
						{
							<div class="row single-slide">
						<div class="col-lg-5">
									<div class="banner-content">
										<h1>@banner.Tenbanner</h1>
										<h3>@banner.Slogan</h3>
										<div class="add-bag d-flex align-items-center">
											<a class="primary-btn" href="@banner.Link">Shopping Now</a>
										</div>
									</div>
								</div>
								<div class="col-lg-7">
									<div class="banner-img">
										<a href="@banner.Link">
											<img class="img-fluid" style="max-width:657px;max-height:394px;"
											src="@Url.Content($"~/img/banner/{banner.Vitri}")" alt="Banner Image">
										</a>
									</div>
								</div>
							</div>
						}

					}
					
				</div>
			</div>
		</div>
	</div>
</section>
