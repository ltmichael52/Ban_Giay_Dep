@using ShoesStore.ViewModels
@model PhieuMuaViewModel
@{
    decimal tongtien = 0;
}
<style>
    .imgProduct {
        max-height: 60px;
        max-width: 60px;
    }
</style>
<script>
    function passMaptttOnClick(mapttt) {
        console.log("Mapttt: ", mapttt);
        document.getElementById('MaptttHidden').value = mapttt;
    }
</script>
<!-- Start Header Area -->
<!-- End Header Area -->
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Checkout</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="single-product.html">Checkout</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Checkout Area =================-->
<section class="checkout_area section_gap">
    <div class="container">

        <div class="billing_details">
            <div class="row">
                <form class="row contact_form" asp-action="ThanhToan" method="post" novalidate="novalidate">
                    <input asp-for="@Model.khInfo.Makh" value="@Model.khInfo.Makh" hidden/>
                    <input asp-for="@Model.khInfo.Ngaysinh" value="@Model.khInfo.Ngaysinh" hidden />
                    <div class="col-lg-8">
                        <div class="row" style="border-bottom: solid 1px #ccc;display:flex;align-items:center">
                            <div class="col-6">
                                <h2 >Order details</h2>
                            </div>
                            <div class="col-6">
                                <a data-toggle="modal" data-target="#exampleModal"
                                    style="cursor:pointer;" class="float-right">
                                    <i class="bi bi-journal-bookmark-fill"></i> 
                                    <span style="text-decoration:underline;color:orange">Choose from address notebook</span>
                                </a>
                            </div>
                        </div>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header text-center">
                                        <h5 class="modal-title" id="exampleModalLabel">Address Notebook</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        ...
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row contact_form" novalidate="novalidate">
                            <div class="col-md-6 form-group p_star">
                                <label for="exampleFormControlInput1" class="form-label" asp-for="@Model.khInfo.Tenkh"><strong>Customer name</strong></label>
                                <input readonly type="text" class="form-control" id="exampleFormControlInput1" placeholder="Customer name" asp-for="@Model.khInfo.Tenkh">
                                <span asp-validation-for="@Model.khInfo.Tenkh" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group p_star">
                                <label for="exampleFormControlInput1" class="form-label" asp-for="@Model.khInfo.Gioitinh"><strong>Gender</strong></label>
                                <input readonly type="text" class="form-control" id="exampleFormControlInput1" asp-for="@Model.khInfo.Gioitinh"
                                       value="@(Model.khInfo.Gioitinh == true ? "Male" : "Female")">
                            </div>
                            <div class="col-md-6 form-group p_star">
                                <label for="exampleFormControlInput1" class="form-label" asp-for="@Model.khInfo.Sdt"><strong>Phone number</strong></label>
                                <input readonly type="number" class="form-control" id="exampleFormControlInput1" placeholder="Phone number" asp-for="@Model.khInfo.Sdt">
                                <span asp-validation-for="@Model.khInfo.Sdt" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group p_star">
                                <label for="exampleFormControlInput1" class="form-label" asp-for="@Model.khInfo.Email"><strong>Email</strong></label>
                                <input readonly type="email" class="form-control" id="exampleFormControlInput1" placeholder="Email" asp-for="@Model.khInfo.Email">
                                <span asp-validation-for="@Model.khInfo.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <label for="exampleFormControlInput1" class="form-label" ><strong>Address</strong></label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Address" >
                                @* <span asp-validation-for="@Model.khInfo.Diachi" class="text-danger"></span> *@
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <label for="exampleFormControlInput1" class="form-label" asp-for="@Model.GhiChu"><strong>Note</strong></label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Note" asp-for="@Model.GhiChu">
                                <span asp-validation-for="@Model.GhiChu" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="order_box">
                            <h2>YOUR ORDER</h2>
                            <ul class="list">
                                <li><a href="#">Products<span>Total cost</span></a></li>
                                @foreach (ShoppingCartItem shopcartItem in Model.listcartItem)
                                {
                                    <li class="d-flex justify-content-between align-items-center mb-1">
                                        <div class="img-container">
                                            <img class="imgProduct" src="~/img/@shopcartItem.sanpham.Madongsanpham/@shopcartItem.sanpham.Anhdaidien" alt="@shopcartItem.Name">
                                        </div>
                                        <div class="product-details">
                                            <span>@shopcartItem.Name</span>
                                            <div>Color: @shopcartItem.TenMau</div>
                                            <div>Size: @shopcartItem.Size <span class="middle">Qty: @shopcartItem.Quantity</span></div>
                                        </div>
                                        <div class="quantity-price">

                                            @{
                                                decimal tiensp;
                                                if (shopcartItem.PhanTramGiam != 1)
                                                {
                                                    tiensp = shopcartItem.Quantity * (shopcartItem.GiaGoc - (shopcartItem.GiaGoc * shopcartItem.PhanTramGiam / 100));
                                                }
                                                else{
                                                    tiensp = shopcartItem.Quantity * shopcartItem.GiaGoc;
                                                }
                                                tongtien += tiensp;
                                            }
                                            <span class="last">@(tiensp.ToString("#,##0"))₫</span>
                                        </div>
                                    </li>
                                }
                            </ul>
                            <ul class="list list_2">
                                <li><a href="#">Total bill<span>@tongtien.ToString("#,##0")₫</span></a></li>
                            </ul>
                            <input id="MaptttHidden" asp-for="@Model.Mapttt" hidden/>
                            @foreach (Phuongthucthanhtoan pttt in ViewBag.MethodPurchase)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" onclick="passMaptttOnClick('@pttt.Mapttt')" type="radio" name="flexRadioDefault"
                                           id="flexRadioDefault1">
                                    <label class="form-check-label" asp-for="@Model.Mapttt">
                                        @pttt.Tenphuongthuc
                                    </label>
                                    
                                </div>
                                
                            }
                            <span asp-validation-for="@Model.Mapttt" class="text-danger"></span>
                            
                            <button class="primary-btn" type="submit">Confirm checkout</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</section>
<!--================End Checkout Area =================-->
