<div id="partialOrder">

</div>

<script>
    $(document).ready(function () {
        $('#btnOrderFind').click(function () {
            var maOrderView = $('#orderId').val();
            $.ajax({
                url: '/TrackingOrder/TrackingDetails',
                type: 'GET',
                data: {
                    orderId : maOrderView
                },
                success:function(response){
                    $('#partialOrder').html(response);
                }
            });
        });
    });
</script>