@model ShoesStore.Areas.Admin.ViewModels.BannerViewModel

<h2>Edit Banner</h2>

<form asp-action="EditBanner" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Mabanner" />
    <div class="form-group">
        <label asp-for="Tenbanner"></label>
        <input asp-for="Tenbanner" class="form-control" />
        <span asp-validation-for="Tenbanner" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FrontImage"></label>
        <input type="file" name="FrontImage" class="form-control" />
        <span asp-validation-for="FrontImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Slogan"></label>
        <input asp-for="Slogan" class="form-control" />
        <span asp-validation-for="Slogan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link"></label>
        <input asp-for="Link" class="form-control" />
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hoatdong"></label>
        <div class="form-check">
            <input asp-for="Hoatdong" class="form-check-input" />
            <label class="form-check-label" asp-for="Hoatdong">Active</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="IndexBanner" class="btn btn-secondary">Back to Index</a>
</form>
