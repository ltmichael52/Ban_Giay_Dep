@using ShoesStore.Models
@model Voucher

@{
    ViewData["Title"] = "Edit Voucher";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container">
    <h2 class="text-center">Edit Voucher</h2>

    <form asp-action="Edit" method="post" class="form-horizontal">
        <div class="form-group row">
            <label asp-for="Mavoucher" class="col-sm-2 col-form-label">Code</label>
            <div class="col-sm-10">
                <input asp-for="Mavoucher" class="form-control" />
                <span asp-validation-for="Mavoucher" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Soluong" class="col-sm-2 col-form-label">Quantity</label>
            <div class="col-sm-10">
                <input asp-for="Soluong" class="form-control" />
                <span asp-validation-for="Soluong" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Giatoithieu" class="col-sm-2 col-form-label">Minimum Price</label>
            <div class="col-sm-10">
                <input asp-for="Giatoithieu" class="form-control" />
                <span asp-validation-for="Giatoithieu" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Giamtoida" class="col-sm-2 col-form-label">Maximum Discount</label>
            <div class="col-sm-10">
                <input asp-for="Giamtoida" class="form-control" />
                <span asp-validation-for="Giamtoida" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Ngaytao" class="col-sm-2 col-form-label">Created Date</label>
            <div class="col-sm-10">
                <input asp-for="Ngaytao" class="form-control" type="date" />
                <span asp-validation-for="Ngaytao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Ngayhethan" class="col-sm-2 col-form-label">Expiration Date</label>
            <div class="col-sm-10">
                <input asp-for="Ngayhethan" class="form-control" type="date" />
                <span asp-validation-for="Ngayhethan" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </form>
</div>
