@model ShoesStore.Areas.Admin.ViewModels.BlogViewModel

<h2>Update Blog</h2>

<form asp-action="UpdateBlog" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Mablog" />
    <div class="form-group">
        <label asp-for="Noidung">Content:</label>
        <textarea asp-for="Noidung" class="form-control">@Model.Noidung</textarea>
        <span asp-validation-for="Noidung" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Theloai">Category:</label>
        <input asp-for="Theloai" class="form-control" value="@Model.Theloai" />
        <span asp-validation-for="Theloai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BlogImage">Avatar</label>
        <input type="file" name="BlogImage" class="form-control" />
        <span asp-validation-for="BlogImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Manv">Author ID:</label>
        <input asp-for="Manv" class="form-control" value="@Model.Manv" disabled />
        <span asp-validation-for="Manv" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Blog</button>
    <a asp-action="ListBlogs" class="btn btn-secondary">Back to List</a>
</form>
