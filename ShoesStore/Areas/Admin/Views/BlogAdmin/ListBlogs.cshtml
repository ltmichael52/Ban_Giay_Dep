@model List<Blog>

@{
    ViewData["Title"] = "List of Blogs";
}

<div class="container">
    <h2 class="text-center">List of Blogs</h2>

    <div class="text-end mb-3">
        <a asp-action="AddBlog" class="btn btn-primary">Create Blog</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>Blog ID</th>
                    <th>Author ID</th>
                    <th>Avatar</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.Mablog</td>
                        <td>@blog.Manv</td>
                        <td><img src="@Url.Content($"~/img/blog/{blog.Anhdaidien}")" style="width:100px; height:100px;" /></td>
                        <td>
                            <form asp-action="DetailBlog" method="get" class="d-inline">
                                <input type="hidden" name="Mablog" value="@blog.Mablog" />
                                <button type="submit" class="btn btn-info">Detail</button>
                            </form>
                            <form asp-action="UpdateBlog" method="get" class="d-inline">
                                <input type="hidden" name="Mablog" value="@blog.Mablog" />
                                <button type="submit" class="btn btn-primary">Edit</button>
                            </form>
                            <form asp-action="DeleteBlog" method="post" class="d-inline">
                                <input type="hidden" name="Mablog" value="@blog.Mablog" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
