@model ShoesStore.Models.Blog

@{
    ViewData["Title"] = "Add Blog";
}

<h2>Add Blog</h2>

<form asp-action="AddBlog" asp-controller="BlogAdmin"method="post">
    @Html.AntiForgeryToken() <!-- Add AntiForgeryToken for security -->
    <input asp-for="ManvNavigation.Manv" value="0" hidden/>
    <input asp-for="ManvNavigation.Tennv" value="0" hidden />
     <input asp-for="ManvNavigation.Email" value="0" hidden/> 
      <input asp-for="ManvNavigation.Sdt" value="0" hidden/>
    <input asp-for="ManvNavigation.EmailNavigation.Email" value="0" hidden />
    <input asp-for="ManvNavigation.EmailNavigation.Matkhau" value="0" hidden />
    <div class="form-group">
        <label asp-for="Theloai">Thể loại:</label>
        <input asp-for="Theloai" class="form-control" />
        <span asp-validation-for="Theloai" class="text-danger"></span> <!-- Display validation error message -->
    </div>
    <div class="form-group">
        <label asp-for="Noidung">Nội dung:</label>
        <textarea asp-for="Noidung" class="form-control"></textarea>
        <span asp-validation-for="Noidung" class="text-danger"></span> <!-- Display validation error message -->
    </div>
    <div class="form-group">
        <label asp-for="Manv">Nhân viên:</label>
        <input asp-for="Manv" class="form-control" />
        <span asp-validation-for="Manv" class="text-danger"></span> <!-- Display validation error message -->
    </div>

    <!-- Add other necessary form fields here -->
    <button type="submit" class="btn btn-primary">Add Blog</button>
    <a asp-action="ListBlogs" class="btn btn-secondary">Back to list Blog</a>
</form>

 