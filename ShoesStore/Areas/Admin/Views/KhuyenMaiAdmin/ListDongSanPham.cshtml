@model Khuyenmai

@{
    ViewData["Title"] = "Danh sách dòng sản phẩm";
}

<div class="text-center">
    <h2 class="display-4">Shoes List For Promotion @Model.Makm</h2>
</div>
<div style="display: flex; justify-content: space-between; align-items: center; width:100%">
    <!-- Link for creating a new Loai -->
    <a asp-action="AddDongSanPham" asp-controller="KhuyenMaiAdmin" aspclass="btn btn-primary"><i class="mdi mdi-plus-circle"></i></a>
    <input type="hidden" asp-for="Makm" />
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th scope="col">Shoes id</th>
                <th scope="col">Shoes name</th>
                <th scope="col">Shoes Category</th>
                <th scope="col">Unsale Price</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var dongsanpham in Model.Madongsanphams)
            {
                <tr>
                    <td>@dongsanpham.Madongsanpham</td>
                    <td>@dongsanpham.Tendongsp</td>
                    <td>@dongsanpham.MaloaiNavigation.Tenloai</td> <!-- Assuming MaloaiNavigation is loaded -->
                    <td>@dongsanpham.Giagoc</td>
                    <!-- Add more cells for additional properties -->
                </tr>
            }
        </tbody>
    </table>
</div>
